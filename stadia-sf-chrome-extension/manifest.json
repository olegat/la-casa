{
  "name": "Stadia Salesforce",
  "version": "1.0",
  "description": "Share Saleforce Case: Adds a context menu to copy a rick-text link to case that you're viewing in your current tab.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs"
  ],
  "manifest_version": 2
}
