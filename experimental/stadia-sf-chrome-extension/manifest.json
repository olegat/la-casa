{
  "name": "Getting Started Example",
  "version": "1.0",
  "description": "Build an Extension!",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://google-stadia.lightning.force.com/*"],
      "js": ["stadia-sf-scrapper.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs"
  ],
  "manifest_version": 2
}
